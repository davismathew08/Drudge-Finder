<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/twid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="." />

    <EditText
        android:id="@+id/etwname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spineerdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@+id/twid" />

    <EditText
        android:id="@+id/etphoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spineerdrop"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etrateperhour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etphoneno"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/etphoneno"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/etplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etphoneno"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etdistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etplace"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bgetchangelocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spineerdrop"
        android:layout_marginStart="11dp"
        android:layout_marginTop="329dp"
        android:text="change location" />

    <Button
        android:id="@+id/bupdateworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etwname"
        android:layout_marginTop="381dp"
        android:text="Update" />

    <Button
        android:id="@+id/bdeleteworker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="377dp"
        android:layout_toEndOf="@+id/etphoneno"
        android:text="Delete" />

    <TextView
        android:id="@+id/tvlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bgetchangelocation"
        android:layout_marginStart="35dp"
        android:layout_marginTop="450dp"
        android:text="." />

</RelativeLayout>